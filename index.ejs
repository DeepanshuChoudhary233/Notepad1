<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Task Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="relative min-h-screen flex flex-col items-center justify-start py-10 text-white font-sans overflow-hidden">
    <!---bacground design-->-->
    <div class="absolute inset-0 -z-10">
      <div class="absolute inset-0 bg-gradient-to-br from-[#0f172a] via-[#1e293b] to-black"></div>
      <div class="absolute top-1/3 left-1/2 -translate-x-1/2 w-[60vw] h-[60vw] bg-gradient-to-r from-blue-700/30 to-cyan-500/20 rounded-full blur-[120px] opacity-70"></div>
      <div class="absolute inset-0 bg-black/40 backdrop-blur-[2px]"></div>
    </div>

    <!-- Header -->
    <header class="mb-10 text-center">
      <h1 class="text-5xl font-extrabold tracking-tight bg-gradient-to-r from-cyan-400 via-blue-500 to-indigo-400 bg-clip-text text-transparent drop-shadow-md">
        Task Manager
      </h1>
      <p class="text-gray-400 mt-2 text-sm">Organize your work beautifully âœ¨</p>
    </header>

    <!-- Create Task Form -->
    <section class="bg-white/10 backdrop-blur-md shadow-xl border border-white/10 rounded-2xl p-8 w-11/12 max-w-xl mb-12 hover:bg-white/15 transition-all duration-300">
      <form action="/create" method="POST" class="flex flex-col gap-4">
        <input
          type="text"
          name="title"
          placeholder="Enter task title"
          class="w-full px-5 py-3 rounded-lg bg-white/10 border border-white/10 focus:border-cyan-500 focus:ring-2 focus:ring-cyan-500/40 outline-none transition-all duration-300 placeholder-gray-400"
        />

        <textarea
          name="details"
          placeholder="Write your task details here..."
          rows="4"
          class="w-full px-5 py-3 rounded-lg bg-white/10 border border-white/10 focus:border-cyan-500 focus:ring-2 focus:ring-cyan-500/40 outline-none transition-all duration-300 placeholder-gray-400 resize-none"
        ></textarea>

        <input
          type="submit"
          value="Create Task"
          class="cursor-pointer bg-gradient-to-r from-blue-600 to-cyan-500 hover:from-blue-500 hover:to-cyan-400 text-white font-semibold py-3 rounded-lg transition-all duration-300 hover:scale-[1.02] shadow-md"
        />
      </form>
    </section>

    <!-- Tasks List -->
    <section class="w-11/12 max-w-5xl flex flex-wrap gap-6 justify-center">
      <% if (files.length > 0) { %>
        <% files.forEach(function(val) { %>
          <div class="task w-72 bg-white/10 border border-white/10 backdrop-blur-md rounded-xl p-5 hover:bg-white/20 transition-all duration-300 shadow-md hover:shadow-cyan-500/20">
            <h2 class="text-2xl font-bold text-cyan-400 truncate mb-3"><%= val %></h2>
            <div class="flex justify-between items-center">
              <a
                href="/files/<%= val %>"
                class="text-cyan-400 hover:text-cyan-300 text-sm font-medium transition-all duration-200"
                >Read more</a
              >
              <a
                href="/edit/<%= val %>"
                class="text-gray-500 hover:text-gray-300 text-sm font-medium transition-all duration-200"
                >Edit</a
              >
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <h3 class="text-gray-400 text-lg font-light">No tasks yet. Start by creating one above ğŸ“</h3>
      <% } %>
    </section>

  </body>
</html>
